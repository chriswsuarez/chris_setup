# ----- Deprecated -----
alias reset_clock='invoke-rc.d chrony restart'
function sync_clock () {
    reg='^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$'
    if ! [[ $1 =~ $reg ]] ; then
        echo "Arg passed must be IP address"
    else
        /etc/init.d/chrony stop
        sudo ntpdate $1
        /etc/init.d/chrony start
    fi

}

