# Cuda
function cudaenv () {
    export CUDA_HOME="/usr/local/cuda-$1"
    export CD_LIBRARY_PATH="/usr/local/cuda-$1/bin:$PATH"
    export PATH="/usr/local/cuda-$1/bin:$PATH"
}

# Generic ROS 1 Networking
alias localmaster='export ROS_MASTER_URI=http://localhost:11311 && export ROS_IP=127.0.0.1'
function rosip () {
    ROSIP="$(ifconfig | grep -A 1 $1 | tail -1 | cut -c 14- | cut -d " " -f 1)"
    export ROS_IP=$ROSIP
}

function rosmaster () {
    ROSIP="$(ifconfig | grep -A 1 $1 | tail -1 | cut -c 14- | cut -d " " -f 1)"
    export ROS_MASTER_URI=http://$ROSIP:11311
    export ROS_IP=$ROSIP
}

# SSH
alias sshkeygen='ssh-keygen -t rsa -b 4096'
function removesshkey () {
    sed -i '$1d' ~/.ssh/known_hosts
}

# SSH
function sshinto () {
    if [ -z "$1" ]; then
        echo "Must pass at least an IP address or hostname as the first argument.  Username as optional second arg."
    elif [ -z "$2" ]; then
        ssh -X nrgadmin@$1
    else
        ssh -X $2@$1
    fi
}

